<!DOCTYPE html>
<html lang="en">

<head>
  <title>Home Page</title>

  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" />
  <link rel="stylesheet" href="/vendor/border-box.css" />
  <link rel="stylesheet" href="/styles/main.css" />
  <link rel="stylesheet" href="/styles/layout.css" />
  <link rel="stylesheet" href="/styles/navbar.css" />
  <link rel="stylesheet" href="/styles/featured.css" />
  <link rel="stylesheet" href="/styles/listed-shoes.css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

  <script src="/vendor/jquery-3.0.0.js"></script>
  <script defer src="/scripts/app.js"></script>
</head>


<body>
  <!-- Top of page-->
  <%- include('header') %>
    <!--info on page-->
    <h1 class="featured-title">Featured Shoes</h1>
    <div class="featured">
      <% for (let i of featuredData) { %>
        <div class="row1">
          <img src="/images/<%= i.image_url %>" class="shoe-image">

          <p class="shoe-name">Brand: <%= i.brand %>
          </p>
          <p class="price">Price: <%= i.price %>
          </p>
          <p class="size">Size: <%= i.size %>
          </p>
        </div>
        <% } %>
    </div>
    <div class="filter">
      <button class="btn active" onclick="filterSelection('all')"> Show all</button>
      <button class="btn" onclick="filterSelection('ascending')"> Ascending</button>
      <button class="btn" onclick="filterSelection('descending')"> Descending</button>
      <div class="container">
        <div class="filterDiv ascending"></div>
        <div class="filterDiv descending"></div>
      </div>
    </div>
    <div class="listing">
      <% for (let i of data) { %>
        <div class="row1">
          <img src="/images/<%= i.image_url %>" class="shoe-image">

          <p class="shoe-name">Brand: <%= i.brand %>
          </p>
          <p class="price">Price: <%= i.price %>
          </p>
          <p class="size">Size: <%= i.size %>
          </p>
        </div>
        <% } %>
    </div>
</body>

</html>
